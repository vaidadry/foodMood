<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.MaterialComponents.DayNight.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecondaryDark</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:fontFamily">@font/dosis_bold</item>
        <item name="strokeColor">@color/colorPrimary</item>
    </style>

    <style name="ToolBar" parent="AppTheme.ActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_toolbar</item>
        <item name="android:theme">@style/AppTheme.ToolbarFont</item>
    </style>

    <style name="AppTheme.ToolbarFont" parent="AppTheme.ActionBar">
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.NavBarFont" parent="AppTheme.ActionBar">
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="FavoriteCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_favorite_selector</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FavoriteCheckboxActionBar" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_favorite_selector_30dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SimpleTextViewTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/dosis_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/generate_random_meal_text_size</item>
        <item name="android:textColor">@color/Text</item>
    </style>

    <style name="MealSelectionRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/meal_selection_background_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:layout_margin">@dimen/meal_selection_icons_layout_margin</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/list_item_icon_size</item>
        <item name="android:layout_height">@dimen/list_item_icon_size</item>
    </style>

    <style name="MealSelectionTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/list_item_icon_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:layout_margin">@dimen/meal_selection_icons_layout_margin</item>
        <item name="android:fontFamily">@font/dosis_regular</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/add_recipe_meal_text</item>
    </style>

    <style name="MealSelectionCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/list_item_text_size</item>
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:textSize">@dimen/checkbox_text_size</item>
        <item name="android:textColor">@color/Text</item>
    </style>

    <style name="Chips" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="chipBackgroundColor">@color/selected_highlight</item>
        <item name="checkedIconVisible">true</item>
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:textSize">@dimen/checkbox_text_size</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:checkable">true</item>
    </style>


    <style name="colorCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">@color/Text</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/Text</item>
        <item name="hintTextColor">@color/Text</item>
        <item name="boxStrokeColor">@color/colorSecondaryDark</item>
        <item name="boxStrokeWidth">@dimen/small_button_stroke_width</item>
        <item name="android:theme">@style/colorCursor</item>
    </style>

    <style name="TextInputLayoutStyleSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/quarter_padding</item>
        <item name="android:layout_marginEnd">@dimen/quarter_padding</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColorHint">@color/Text</item>
        <item name="hintTextColor">@color/Text</item>
        <item name="boxStrokeColor">@color/selected_highlight</item>
        <item name="boxStrokeWidth">@dimen/small_button_stroke_width</item>
        <item name="android:theme">@style/colorCursor</item>
    </style>

    <style name="TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/Text</item>
        <item name="android:fontFamily">@font/dosis_medium</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/add_item_text_field_text_size</item>
        <item name="android:textColorHint">@color/Text</item>
    </style>

    <style name="ColorfulButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:fontFamily">@font/robotomono_bold</item>
        <item name="android:textColor">@color/TextToolbarsButtons</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="SolidButton" parent="ColorfulButton">
        <item name="android:background">@drawable/rounded_button_solid</item>
    </style>

</resources>
